<%= form_for @user do |f| %>
  <%= f.label :name, "name" %>
  <%= f.text_field :name %><br>
  <%= f.label :email, "email" %>
  <%= f.text_field :email %><br>
  <%= f.label :password, "password" %>
  <%= f.password_field :password %><br>
  <%= f.submit "submit", :disable_with => 'submiting...' %>
<% end %>
